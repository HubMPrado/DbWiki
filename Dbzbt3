    <script>
        function searchFunction() {
            var input = document.getElementById('searchInput').value.toLowerCase();
            if (input === "goku") {
                window.location.href = "goku.html";
            } else if (input === "vegeta") {
                window.location.href = "vegeta.html";
            } else {
                alert("Personagem não encontrado.");
            }
        }
    </script>
